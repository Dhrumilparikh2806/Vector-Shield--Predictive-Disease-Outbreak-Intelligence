{
    "version": 2,
    "buildCommand": "cd frontend && npm install && npm run build",
    "outputDirectory": "frontend/dist",
    "env": {
        "PYTHONUNBUFFERED": "1"
    },
    "functions": {
        "api/index.py": {
            "memory": 3008,
            "maxDuration": 60
        }
    },
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "pythonVersion": "3.11"
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontend/dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/v1/(.*)",
            "dest": "api/index.py"
        },
        {
            "src": "/api/(.*)",
            "dest": "api/index.py"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/index.html"
        }
    ]
}