{
    "version": 2,
    "env": {
        "PYTHONUNBUFFERED": "1"
    },
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "buildCommand": "npm install && npm run build",
                "distDir": "frontend/dist"
            }
        },
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "pythonVersion": "3.11"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/v1/(.*)",
            "dest": "api/index.py"
        },
        {
            "src": "/api/(.*)",
            "dest": "api/index.py"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "/",
            "dest": "/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}